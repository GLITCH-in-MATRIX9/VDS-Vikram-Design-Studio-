{
  "name": "vds-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "start:optimized": "node --max-old-space-size=512 --expose-gc dist/server.js",
    "start:production": "NODE_ENV=production node --max-old-space-size=512 --expose-gc dist/server.js",
    "migrate:base64": "ts-node src/scripts/migrateBase64Images.ts",
    "migrate:base64:check": "node run-migration.js",
    "test:cloudinary": "node test-cloudinary.js",
    "verify:migration": "node verify-migration.js",
    "check:base64": "node check-remaining-base64.js",
    "clean:base64": "node force-clean-base64.js",
    "deep:clean": "node deep-clean-base64.js"
  },
  "dependencies": {
    "@types/nodemailer": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "google-recaptcha": "^1.1.0",
    "jsonwebtoken": "^9.0.2",
    "leaflet": "^1.9.4",
    "mongoose": "^8.16.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.6",
    "react-leaflet": "^5.0.0",
    "streamifier": "^0.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.13",
    "@types/streamifier": "^0.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
